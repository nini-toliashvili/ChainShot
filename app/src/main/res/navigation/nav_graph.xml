<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/photoFragment"
        android:name="com.example.photochainapp.presentation.fragment.PhotoFragment"
        android:label="PhotoFragment" >
        <action
            android:id="@+id/action_photoFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_photoFragment_to_friendsFragments"
            app:destination="@id/friendsFragments" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.photochainapp.presentation.fragment.AuthFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/action_authFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.photochainapp.presentation.fragment.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendsFragments"
        android:name="com.example.photochainapp.presentation.fragment.FriendsFragments"
        android:label="FriendsFragments" >
        <action
            android:id="@+id/action_friendsFragments_to_requestsFragment"
            app:destination="@id/requestsFragment" />
    </fragment>
    <fragment
        android:id="@+id/requestsFragment"
        android:name="com.example.photochainapp.presentation.fragment.RequestsFragment"
        android:label="RequestsFragment" />
</navigation>