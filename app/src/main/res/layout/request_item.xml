<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF8E6"
    android:layout_width="match_parent"
    android:layout_height="130dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mail_on_request"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:text="ntoliashvili4@gmail.com"
        android:textSize="17sp"
        android:paddingStart="15dp"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:gravity="start"
        android:textColor="#434244"
        android:background="@drawable/friend_item_shape"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept_btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        android:text="@string/accept"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/sign_in_btn"
        app:layout_constraintBottom_toBottomOf="@id/mail_on_request"
        app:layout_constraintStart_toStartOf="@id/mail_on_request"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/decline_btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="#434244"
        android:textColor="@color/white"
        android:text="@string/decline"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/sign_in_btn"
        app:layout_constraintBottom_toBottomOf="@id/mail_on_request"
        app:layout_constraintEnd_toEndOf="@id/mail_on_request"
        />
</androidx.constraintlayout.widget.ConstraintLayout>